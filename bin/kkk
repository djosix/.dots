#!/bin/bash

X=$1
[[ $X ]] || X='bash|tsh'

pids=`sudo ps ax \
    | sed 1d \
    | awk '{ PID=$1; $1=$2=$3=$4=""; print PID $0 }' \
    | grep -E "$X" \
    | grep -vF "$0" \
    | grep -v grep \
    | tee /dev/stderr \
    | awk '{ print $1 }' \
    | xargs`

if [[ $pids ]]; then
    echo
    read -p "Kill $pids [Y/n] " K
    if [[ $K != n && $K != N ]]; then
        echo "Killing $pids"
        kill -9 $pids
    fi
fi

